def skip_animals(animals, skip)
  # Your code here
  result = []
  skip = skip - 1
  animals.each_with_index do |animal, i|
    result.push("#{i}:#{animal}") if i > skip
  end
  result
end

puts skip_animals(['fox', 'cow', 'zebra', 'tiger'], 2)


def rot13(secret_messages)
  secret_messages.each do |message|
    # puts "ord: #{message[0].ord}, ord:chr: #{message[0].ord.chr}"
    message.split("").each do |character|
      puts "character.ord #{character.ord.chr}"
      rotated_value = character.ord + 13
      # 97 122
      if rotated_value <= 90 && rotated_value >= 60
        rotated_value = rotated_value.chr
      elsif rotated_value >= 90 && rotated_value < #this isn't going to work, need to consider when string is higher value and will cross over to lower case ordinals
        rotated_value = (rotated_value - 122) + 96
      elsif rotated_value <= 97 && rotated_value >= 122
        rotated_value = rotated_value.chr
      elsif rotated_value > 122
        rotated_value = (rotated_value - 122) + 96
      end
      puts "rotated_value: #{rotated_value}"
      puts "character + 13: #{rotated_value.chr}\n\n"
    end
  end
end

# Why did the chicken cross the road
