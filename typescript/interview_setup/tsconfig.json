{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "module": "system",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outFile": "./built/local/tsc.js",
    "sourceMap": true
  },
  "include": [
    "typescript/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
